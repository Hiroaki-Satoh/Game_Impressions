<%# 投稿(Impression)一覧表示画面(管理者) %>
<div class = "container">
  <div class = "row">
    <div class = "col-4">
      <%# リンクリストの表示 %>
      <%= render 'admin/homes/link_list' %>
    </div>
    <%# Impressionの一覧表示 %>
    <div class = "col-8">
      <h1>投稿一覧</h1>
      <div class = "row">
        <div class = "table-responsive">
          <table class = "table thead-light table-striped table-bordered text-nowrap">
            <thread>
              <tr>
                <th>Image</th>
                <th>Title</th>
                <th>GameTitle</th>
              </tr>
            </thread>
            <tbody>
              <% @impressions.each do |impression| %>
                <tr>
                  <td align = "center">
		                <%= link_to(admin_impression_path(impression)) do %>
			                <%= attachment_image_tag(impression, :image, :size => "50x50",
                        format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"50x50") %>
		                <% end %>
                  </td>
                  <td><h3><%= link_to impression.title, admin_impression_path(impression) %></h3></td>
                  <td><%= impression.game_title.name %></td>
                </tr>
	            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <ul class = "pagination justify-content-center">
        <%= paginate(@impressions) %>
      </ul>
	  </div>
  </div>
</div>
