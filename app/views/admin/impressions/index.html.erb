<%# 投稿(Impression)一覧表示画面(管理者) %>
<div class = "container">
  <div class = "row">
    <div class = "col-4">
      <%# リンクリストの表示 %>
      <%= render 'admin/homes/link_list' %>
    </div>
    <%# Impressionの一覧表示 -%>
    <div class = "col-8">
      <h1>投稿一覧</h1>
      <div class = "row">
        <% @impressions.each do |impression| %>
          <div class = "col-6">
            <div class = "impression-image text-center">
		          <%= link_to(admin_impression_path(impression)) do %>
			          <%= attachment_image_tag(impression, :image, :size => "150x150",
                  format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"150x150") %>
		          <% end %>
		        </div>
		        <h3><%= link_to impression.title, admin_impression_path(impression) %></h3>
		        <p><%= impression.game_title.name %></p>
          </div>
	      <% end %>
	      <div class = "text-center">
	        <%= paginate (@impressions) %>
	      </div>
	    </div>
    </div>
  </div>
</div>
