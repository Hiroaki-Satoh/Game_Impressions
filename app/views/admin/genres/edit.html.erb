<%# ゲームジャンルの編集画面(管理者) %>
<div class = "container">
  <div class = "row">
    <%# リンクリストの表示 %>
    <%= render 'admin/homes/link_list' %>
  	<div class = "col-8">
      <h2>ジャンルの編集</h2>
      <%= form_with(model: @genre, local: true, url:{action: 'update'}) do |f| %>
        <div class = "field">
          <h4>ジャンル名</h4>
          <%= f.text_field :name %>
        </div>
        <div class = "field">
          <h4>状態の切り替え</h4>
          <%# ラジオボタンで有効・無効を切り替える %>
          <%= f.radio_button :is_valid, true %>
          <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>&emsp;
          <%= f.radio_button :is_valid, false %>
          <%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
          <%# --------------------------- %>
        </div>
        <%= f.submit "変更を保存する", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
