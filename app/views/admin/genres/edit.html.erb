<div class = "container">
  <h2>ジャンルの編集</h2>
  <div class = "row">
  	<div class = "col col-xs-12">
      <%= form_with(model: @genre, local: true, url:{action: 'update'}) do |f| %>
        <div class = "field">
          <h4>ジャンル名</h4>
          <%= f.text_field :name %>
        </div>
        <div class = "field">
          <h4>状態の切り替え</h4>
          <%= f.radio_button :is_valid, true %>
          <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>&emsp;
          <%= f.radio_button :is_valid, false %>
          <%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
        </div>
          <%= f.submit "変更を保存する", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>

<div class = "button">
  <div style = "text-align: center">
    <%= link_to 'ジャンル一覧に戻る', admin_genres_path, class: "btn btn-sm btn-primary" %>&emsp;
    <%= link_to '管理者トップに戻る', admin_top_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>