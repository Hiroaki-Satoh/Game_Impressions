<div class = "container">
  <!-- ユーザの一覧表示 -->
  <h1>ユーザ一覧</h1>
  <div class = "row">
  	<div class = "col col-xs-12">
      <div class = "table-responsive">
  	  	<table class = "table thead-light table-striped table-bordered text-nowrap">
  	  	  <thread>
  	  	  	<tr>
  	  	  	  <th>ニックネーム</th>
              <th>Eメールアドレス</th>
  	  	  	  <th>状態</th>
  	  	    </tr>
  	  	  </thread>
  	  	  <tbody>
  	  	    <% @users.each do |user| %>
  	  	      <tr>
                <!-- ニックネーム クリックでユーザ詳細ページへ -->
  	  	        <td><%= link_to 'user.nickname', admin_user_path(user), class: "btn-link" %></td>
                <!-- Eメールアドレス -->
                <td><%= user.email %></td>
                <!-- ユーザアカウントの状態表示 -->
  	  	        <% if user.is_valid == true %>
  	  	          <td>有効</td>
  	  	        <% elsif user.is_valid == false %>
  	  	      	  <td>退会</td>
  	  	        <% end %>
                <!-- ------------------- -->
  	  	      </tr>
  	  	    <% end %>
  	  	  </tbody>
  	    </table>
  	  </div>
    </div>
  </div>
  <!-- ユーザ一覧表示 ここまで -->

  <div class = "text-center">
  	<%= paginate(@users) %>
  </div>

  <div class = "button">
  <div style = "text-align: center">
    <%= link_to '管理者トップに戻る', admin_top_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>