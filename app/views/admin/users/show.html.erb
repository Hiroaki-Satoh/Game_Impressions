<%# 登録ユーザ詳細表示(管理者) %>
<div class = "container">
  <div class = "row">
    <div class = "col-4">
      <%# リンクリストの表示 %>
      <%= render 'admin/homes/link_list' %>
    </div>
    <div class = "col-8">
      <h1>登録ユーザ 詳細ページ</h1>
      <div class = "row">
  	    <div class = "col-3">
  	      <%= attachment_image_tag(@user, :icon_image, :size => "300x240",
  	        format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"300x240") %>
  	    </div>
  	    <div class = "col-9">
  	      <p>ニックネーム<br><%= @user.nickname %></p>
  	      <p>Eメールアドレス<br><%= @user.email %></p>
  	      <p>状態<br>
            <% if @user.is_valid == true %>
              有効のユーザです。
            <% elsif @user.is_valid == false %>
              退会したユーザです。
            <% end %>
          </p>
        </div>
      </div>
  	</div>
  </div>
</div>
