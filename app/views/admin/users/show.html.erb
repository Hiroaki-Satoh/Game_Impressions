<div class = "container">
  <h1>ユーザ 詳細ページ</h1>
  <div class = "row">
  	<div class = "col col-xs-3">
  	  <%= attachment_image_tag(@user, :icon_image, :size => "300x240",
  	  format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"300x240") %>
  	</div>
  	<div class = "col col-xs-9">
  	  <p>ニックネーム<br><%= @user.nickname %></p>
  	  <p>Eメールアドレス<br><%= @user.email %></p>
  	  <p>
        状態<br>
        <% if @user.is_valid == true %>
          有効のユーザです。
        <% elsif @user.is_valid == false %>
          退会したユーザです。
        <% end %>
      </p>
  	</div>
  </div>
</div>

<div class = "button">
  <div style = "text-align: center">
  	<%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-success" %>&emsp;
    <%= link_to 'ユーザ一覧へ戻る', admin_users_path, class: "btn btn btn-primary" %>
  </div>
</div>
