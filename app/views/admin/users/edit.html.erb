<%# 登録ユーザ情報編集(管理者) %>
<div class = "container">
  <div class = "row">
    <div class = "col-4">
      <%# リンクリストの表示 %>
      <%= render 'admin/homes/link_list' %>
    </div>
  	<div class = "col-8">
      <h2>ユーザ情報の編集</h2>
      <%= form_with(model: @user, local: true, url:{action: 'update'}) do |f| %>
        <div class = "form-group">
          <%= f.label :ユーザアイコン %><br>
          <%= attachment_image_tag(@user, :icon_image, :size => "100x100",
            format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"100x100") %><br>
          <%= f.attachment_field :icon_image, class: "form-controll-file" %>
        </div>

        <div class = "form-group">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :nickname, class: "form-controll w-50" %>
        </div>

        <div class = "form-group">
          <%= f.label :Eメールアドレス %><br>
          <%= f.email_field :email, class: "form-controll w-50" %>
        </div>

        <div class = "form-group">
          <h4>状態の切り替え</h4>
          <%# ラジオボタンで有効・無効を切り替える %>
          <%= f.radio_button :is_valid, true %>
          <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>&emsp;
          <%= f.radio_button :is_valid, false %>
          <%= f.label :is_valid, "無効（退会）", {value: :false, style: "display: inline-block;"} %>
          <%# --------------------------- %>
        </div>
          <%= f.submit "変更を保存する", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
