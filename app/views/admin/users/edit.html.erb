<div class = "container">
  <h2>ユーザ情報の編集</h2>
  <div class = "row">
  	<div class = "col col-xs-12">
      <%= form_with(model: @user, local: true, url:{action: 'update'}) do |f| %>
        <div class = "form-group">
          <%= f.label :ユーザアイコン %><br>
          <%= attachment_image_tag(@user, :icon_image, :size => "100x100",
          format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"100x100") %>
          <br>
          <%= f.attachment_field :icon_image, class: "form-controll-file" %>
        </div>
        <div class = "field">
          <%= f.label :ニックネーム %>
          <%= f.text_field :nickname %>
        </div>
        <div class = "field">
          <%= f.label :Eメールアドレス %>
          <%= f.email_field :email %>
        </div>
        <div class = "field">
          <h4>状態の切り替え</h4>
          <!-- ラジオボタンで有効・無効を切り替える -->
          <%= f.radio_button :is_valid, true %>
          <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>&emsp;
          <%= f.radio_button :is_valid, false %>
          <%= f.label :is_valid, "無効（退会）", {value: :false, style: "display: inline-block;"} %>
          <!-- --------------------------- -->
        </div>
          <%= f.submit "変更を保存する", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>

<div class = "button">
  <div style = "text-align: center">
    <%= link_to 'ユーザ一覧に戻る', admin_users_path, class: "btn btn-sm btn-primary" %>&emsp;
    <%= link_to 'ユーザ詳細に戻る', admin_user_path(@user), class: "btn btn-sm btn-primary" %>
  </div>
</div>