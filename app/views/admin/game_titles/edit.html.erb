<div class = "container">
  <h1>ゲームタイトル編集ページ</h1>
  <div class = "row justify-content-center">
  	<div class = "col-12">
  	  <%= form_with(model: @game_title, url:{action: 'update'}) do |f| %>
  	    <div class = "form-group">
          <%= f.label :ゲーム画像 %><br>
          <%= attachment_image_tag(@game_title, :game_image, :size => "100x100",
          format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"100x100") %>
          <br>
  	  	  <%= f.attachment_field :game_image, class: "form-controll-file" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ゲームタイトル %><br>
  	  	  <%= f.text_field :name, placeholder: "ゲームタイトル", class: "form-controll w-50" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ジャンル %><br>
  	      <%= f.collection_select :genre_id, Genre.where(is_valid: true), :id, :name, include_blank: "--- 選択して下さい ---" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ゲーム紹介文 %><br>
  	  	  <%= f.text_area :introduction, size: "x10", placeholder: "ゲーム紹介文", class: "form-controll w-50" %>
  	    </div>
  	    <%= f.submit "変更を保存する", class: "btn btn-info" %>
  	    <% end %>
    </div>
    <div class = "col-5">
      <div class = "button">
        <div style = "text-align: center">
          <%= link_to 'ゲームタイトル一覧へ戻る', admin_game_titles_path, class: "btn btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
