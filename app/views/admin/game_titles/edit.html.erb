<%# ゲームタイトル編集ページ(管理者) %>
<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-4">
      <%# リンクリストの表示 %>
      <%= render 'admin/homes/link_list' %>
    </div>
  	<div class = "col-8">
      <h1>Game title edit </h1>
  	  <%= form_with(model: @game_title, url:{action: 'update'}) do |f| %>

  	    <div class = "form-group">
          <%= f.label :ゲーム画像 %><br>
          <%= attachment_image_tag(@game_title, :game_image, :size => "150x150", format: 'jpeg',
          class: "img-rounded", fallback: "no_image.jpg", size:"150x150") %><br>
  	  	  <%= f.attachment_field :game_image, class: "form-controll-file" %>
  	    </div>

  	    <div class = "form-group">
  	  	  <%= f.label :ゲームタイトル %><br>
  	  	  <%= f.text_field :name, placeholder: "ゲームタイトル", class: "form-controll w-100" %>
  	    </div>

  	    <div class = "form-group">
  	  	  <%= f.label :ジャンル %><br>
  	      <%= f.collection_select :genre_id, Genre.where(is_valid: true),
          :id, :name, include_blank: "--- 選択して下さい ---" %>
  	    </div>

  	    <div class = "form-group">
  	  	  <%= f.label :ゲーム紹介文 %><br>
  	  	  <%= f.text_area :introduction, size: "x10", placeholder: "ゲーム紹介文", class: "form-controll w-100" %>
  	    </div>

  	    <%= f.submit "変更を保存する", class: "btn btn-info" %>
  	  <% end %>
    </div>
  </div>
</div>
