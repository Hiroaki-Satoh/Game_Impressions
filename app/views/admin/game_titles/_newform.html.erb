<%# ゲームタイトル登録フォーム 部分テンプレート %>
<div class = "col-8">
  <h2>ゲームタイトルの追加</h2>
  <%= form_with(model: game_title, url: {action: 'create'}) do |f| %>
    <div class = "form-group">
      <%= f.label :ゲーム画像 %><br>
      <%= f.attachment_field :game_image, class: "form-controll-file" %>
    </div>
 	  <div class = "form-group">
      <%= f.label :ゲームタイトル %><br>
      <%= f.text_field :name, placeholder: "ゲームタイトル", class: "form-controll w-100" %>
    </div>
    <div class = "form-group">
      <%= f.label :ジャンル %><br>
      <%= f.collection_select :genre_id,
        Genre.where(is_valid: true), :id, :name, include_blank: "--- 選択して下さい ---" %>
    </div>
    <div class = "form-group">
      <%= f.label :ゲーム紹介文 %><br>
      <%= f.text_area :introduction, size: "x10", placeholder: "ゲーム紹介文", class: "form-controll w-100" %>
    </div>
    <%= f.submit "追加する", class: "btn btn-info" %>
  <% end %>
</div>
