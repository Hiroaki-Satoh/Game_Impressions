<div class = "container">
  <!-- ゲームタイトルの一覧表示 -->
  <h1>ゲームタイトル一覧</h1>
  <div class = "row">
  	<div class = "col col-xs-12">
      <div class = "table-responsive">
  	  	<table class = "table thead-light table-striped table-bordered text-nowrap">
  	  	  <thread>
  	  	  	<tr>
  	  	  	  <th>ゲーム画像</th>
  	  	  	  <th>ゲームタイトル名</th>
  	  	  	  <th>ジャンル</th>
  	  	  	  <th></th>
  	  	    </tr>
  	  	  </thread>
  	  	  <tbody>
  	  	    <% @game_titles.each do |game_title| %>
  	  	      <tr>
  	  	      	<td>
  	  	      	  <%= attachment_image_tag(game_title, :game_image, :size => "40x40",
  	  	      	  format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg",size:"40x40") %>
  	  	      	</td>
  	  	        <td><%= game_title.name %></td>
  	  	        <% if game_title.genre.is_valid == true %>
  	  	          <td><%= game_title.genre.name %></td>
  	  	        <% elsif genre.is_valid == false %>
  	  	      	  <td>無効</td>
  	  	        <% end %>
  	  	      	<td>
  	  	      	  <%= link_to '詳細', admin_game_title_path(game_title), class: "btn btn-primary" %>&emsp;
  	  	      	  <%= link_to '編集', edit_admin_game_title_path(game_title), class: "btn btn-success" %>
  	  	      	 </td>
  	  	      </tr>
  	  	    <% end %>
  	  	  </tbody>
  	    </table>
  	  </div>
    </div>
  </div>
  <!-- ゲームタイトルの一覧表示 ここまで -->

  <div class = "text-center">
  	<%= paginate(@game_titles) %>
  </div>

  <!-- 新規作成フォーム -->
  <h2>ゲームタイトルの追加</h2>
  <div class = "row">
  	<div class = "col col-xs-12">
  	  <%= form_with(model: @game_title, url:{action: 'create'}) do |f| %>
  	    <div class = "form-group">
  	  	  <%= f.label :ゲーム画像 %><br>
  	  	  <%= f.attachment_field :game_image, class: "form-controll-file" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ゲームタイトル %><br>
  	  	  <%= f.text_field :name, placeholder: "ゲームタイトル", class: "form-controll w-50" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ジャンル %><br>
  	      <%= f.collection_select :genre_id, Genre.where(is_valid: true), :id, :name, include_blank: "--- 選択して下さい ---" %>
  	    </div>
  	    <div class = "form-group">
  	  	  <%= f.label :ゲーム紹介文 %><br>
  	  	  <%= f.text_area :introduction, size: "x10", placeholder: "ゲーム紹介文", class: "form-controll w-50" %>
  	    </div>
  	    <%= f.submit "追加", class: "btn btn-info" %>
  	    <% end %>
    </div>
  </div>
  <!-- 新規作成フォーム ここまで -->
</div>
<div class = "button">
  <div style = "text-align: center">
    <%= link_to '管理者トップに戻る', admin_top_path, class: "btn btn-sm btn-primary" %>
  </div>
</div>