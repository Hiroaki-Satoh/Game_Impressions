<%# ゲームタイトル詳細ぺージ %>
<div class = "container">
  <div class = "row">
    <%= render 'admin/homes/link_list' %>
    <div class = "col-8">
      <h1>ゲームタイトル 詳細ページ</h1>
      <div class = "row">
  	    <div class = "col-5">
          <div style = "text-align: center">
  	        <%= attachment_image_tag(@game_title, :game_image, :size => "240x240",
  	          format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"240x240") %>
          </div>
          <div class = "button">
            <div style = "text-align: center">
              <%= link_to '編集する', edit_admin_game_title_path(@game_title), class: "btn btn-success" %>
            </div>
          </div>
  	    </div>
  	    <div class = "col-7">
  	      <p>ゲームタイトル名<br><%= @game_title.name %></p>
  	      <p>ジャンル<br><%= @game_title.genre.name %></p>
  	      <p>ゲーム紹介文<br><%= @game_title.introduction %></p>
  	    </div>
      </div>
    </div>
  </div>
</div>
