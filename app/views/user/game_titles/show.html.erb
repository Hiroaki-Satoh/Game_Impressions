<div class = "container">
  <h1>ゲームタイトル 詳細ページ</h1>
  <div class = "row">
    <div class = "col-4">
      <!-- ユーザプロフィールの表示 -->
      <%= render 'user/users/profile', user: @user %>
      <!-- リンクリストの表示 -->
      <%= render 'user/users/link_list' %>
    </div>

    <div class = col-8>
  	  <div class = "row">
        <div class = "col-3">
  	      <%= attachment_image_tag(@game_title, :game_image, :size => "100x100",
  	      format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"100x100") %>
  	    </div>
  	    <div class = "col-9">
  	      <p>ゲームタイトル名<br><%= @game_title.name %></p>
  	      <p>ジャンル<br><%= @game_title.genre.name %></p>
  	      <p>ゲーム紹介文<br><%= @game_title.introduction %></p>
        </div>
      </div>
      <div class = "row">
        <div class = "col-12">
          <h2>Reviews</h2>
        </div>
      </div>
  	</div>
  </div>
</div>