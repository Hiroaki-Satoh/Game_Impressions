<!-- レビュー一覧表示 部分テンプレート -->
<div class = "row">
  <h3>Rviews（<%= @game_title.reviews.count %>）</h3>
</div>
<div class = "row">
    <div class = "col-8">
      <li>グラフィック：<%= @game_title.reviews.average(:graphic) %></li>
      <li>サウンド：<%= @game_title.reviews.average(:sound) %></li>
      <li>ストーリー：<%= @game_title.reviews.average(:story)%></li>
      <li>ボリューム：<%= @game_title.reviews.average(:volume)%></li>
      <li>おすすめ度：<%= @game_title.reviews.average(:recommended)%></li>
  </div>
  <table class="table table-bordered">
    <% @game_title.reviews.each do |review| %>
      <div class="col-6">
        <tr>
          <td>
            <div class = "review_user_icon">
              <!-- ユーザアイコン -->
              <%= attachment_image_tag(review.user, :icon_image, :size => "40x40",
              format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"40x40") %>
              <!-- ユーザニックネーム -->
              <%= link_to review.user.nickname, user_user_path(review.user_id), class: "btn btn-link" %>
            </div>
          </td>
        </tr>
        <tr>
          <!-- 評価項目を表示する -->
          <td>
            <li>グラフィック：<%= review.graphic%></li>
            <li>サウンド：<%= review.sound%></li>
            <li>ストーリー：<%= review.story%></li>
            <li>ボリューム：<%= review.volume%></li>
            <li>おすすめ度：<%= review.recommended%></li>
          </td>
        <tr>
          <td>
            <h4><%= review.title %></h4>
            <p><%= review.body %></p>
          </td>
        </tr>
      </div>
    <% end %>
  </table>
</div>