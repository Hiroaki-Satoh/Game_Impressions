<div class = "container">
  <div class = "row">
    <div class = "col-4">
      <!-- ユーザプロフィールの表示 -->
	    <%= render 'user/users/profile', user: @user %>
	    <!-- リンクリストの表示 -->
	    <%= render 'user/users/link_list' %>
    </div>

    <!-- Impressions 一覧の表示 -->
    <div class = "col-8">
      <h2>Impressions</h2>
      <%= link_to '新規作成', new_user_impression_path, class: "btn btn-primary" %>
      <table class = "table thead-light table-striped table-bordered text-nowrap">
      	<thread>
      	  <tr>
      	  	<th>タイトル</th>
      	  	<th>ゲームタイトル</th>
      	  	<th>いいね</th>
      	  	<th>コメント</th>
      	  </tr>
      	</thread>
        <tbody>
          <%= @impressions.each do |impression| %>
            <tr>
              <td><%= impression.title %></td>
              <td><%= impression.game_title.name %></td>
              <td>いいね</td>
              <td>コメント</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- Impressions 一覧表示 ここまで -->
  </div>
</div>
