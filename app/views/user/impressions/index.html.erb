<div class = "conteiner">
  <div class = "row">
    <div class = "col-4">
      <!-- ユーザプロフィールの表示 -->
	  <%= render 'user/users/profile', user: @user %>
	  <!-- リンクリストの表示 -->
	  <%= render 'user/users/link_list' %>
    </div>

    <!-- Impressionの一覧表示 -->
    <div class = "col-8">
      <h1>投稿一覧</h1>
      <div class = "row">
        <% @impressions.each do |impression| %>
          <div class = "col-6">
            <div class = "impression-image text-center">
		          <%= link_to(user_impression_path(impression)) do %>
			          <%= attachment_image_tag(impression, :image, :size => "200x200",
                format: 'jpeg', class: "img-rounded", fallback: "no_image.jpg", size:"200x200") %>
		          <% end %>
		        </div>
		        <div class = "text-center">
		          <h3><%= link_to impression.title, user_impression_path(impression) %></h3>
		        </div>
		        <div class = "game-title text-center">
		          <%= impression.game_title.name %>
		        </div>
		        <div class = "row justify-content-center">
		          <div class = "col-3">
		            <label class = "like_<%= impression.id %> text-center">
                  <%= render 'user/likes/like', impression: impression %>
                </label>
                <label>
                  コメント（<%= impression.comments.count %>）
                </label>
              </div>
            </div>
          </div>
        <% end %>
      </div>
	    <div class = "text-center">
	      <%= paginate (@impressions) %>
	    </div>
    </div>
  </div>
</div>
