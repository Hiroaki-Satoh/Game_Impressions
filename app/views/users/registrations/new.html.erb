<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-6">
      <h2>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <%# ニックネーム（nickname）入力フォームの追加 %>
        <div class = "form-group">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",
          placeholder: "4文字以上20文字以下", class: "form-control" %>
        </div>
        <%# ---------------------------------- %>

        <div class = "form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
          placeholder: "email@example", class: "form-control" %>
        </div>

        <div class = "form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",
          placeholder: "パスワード（6文字以上）", class: "form-control" %>
        </div>

        <div class = "form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
          placeholder: "パスワードの確認", class: "form-control" %>
        </div>

        <div class = "actions">
          <div class = "col-md-8 col-md-offset-2">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      <div class = "text-center">
        <br>登録済みの方は、<%= link_to "こちら", new_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>
