	<!-- バリデーションエラーメッセージの表示 -->
	<% if model.errors.any? %>
  		<div id="error_explanation" class="alert alert-danger">
    		<ul>
    			<h3><%= model.errors.count %>件のエラーがあります。</h3>
      			<% model.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
    		</ul>
  		</div>
	<% end %>
